<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>Geigerapi</servlet-name>
		<servlet-class>com.appspot.geigerapi.GeigerapiServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Upload</servlet-name>
		<servlet-class>com.appspot.geigerapi.GeigerapiServlet</servlet-class>
	</servlet>
    <servlet>
    	<servlet-name>RestletServlet</servlet-name>
    	<servlet-class>org.restlet.ext.servlet.ServerServlet</servlet-class>
        <init-param>
			<param-name>org.restlet.application</param-name>
			<param-value>com.appspot.geigerapi.GeigerRestApplication</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>Geigerapi</servlet-name>
		<url-pattern>/data</url-pattern>
	</servlet-mapping>
		<servlet-mapping>
		<servlet-name>Upload</servlet-name>
		<url-pattern>/upload</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Geigerapi</servlet-name>
		<url-pattern>/geigerapi</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RestletServlet</servlet-name>
		<url-pattern>/rest</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
